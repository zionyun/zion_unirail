<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090000">

    <Button
        android:id="@+id/black_theme"
        android:layout_width="112dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/black"
        android:text="저시력 모드"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/white_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/white_theme"
        android:layout_width="111dp"
        android:layout_height="44dp"
        android:background="@android:color/black"
        android:text="화이트테마"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/black_theme" />

    <Button
        android:id="@+id/start_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="home"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="12dp" />
</android.support.constraint.ConstraintLayout>