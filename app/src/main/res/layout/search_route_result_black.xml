<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/route_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.easysubway.MainActivity">

    <RelativeLayout
        android:id="@+id/Rlayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#000000"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/textmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#000000"
            android:gravity="center"
            android:text="경로 탐색 결과"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btn_back_subway"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:src="@drawable/btn_back_subway_black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e9e9e9" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/startStation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/startDirection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/startLineNum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/startRailLinkListNum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/middleStation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/middleDirection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/middleLineNum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/middleRailLinkListNum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/finalStation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/finalLineNum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF" />


</LinearLayout>